<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">fonts/LatoRegular.ttf</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">fonts/LatoRegular.ttf</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">@dimen/dimen_btn_width</item>
        <item name="android:layout_height">@dimen/dimen_btn_height</item>
        <item name="android:textSize">@dimen/font_largest</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">fonts/LatoRegular.ttf</item>
    </style>

    <!-- Main screen -->
    <style name="Button.MainScreen" parent="Button">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_width">@dimen/width_btn_main</item>
        <item name="android:layout_height">@dimen/height_btn_main</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/font_largest</item>
    </style>

    <!-- Settings screen -->
    <style name="RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">fonts/LatoRegular.ttf</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

</resources>
